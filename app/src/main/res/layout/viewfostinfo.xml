<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="宠物种类："
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_fostinfo_name"
                android:layout_toRightOf="@id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/text2"
                android:layout_alignTop="@+id/et_fostinfo_price"
                android:layout_below="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="寄养价格："
                android:textSize="30sp"
                />

            <EditText
                android:id="@+id/et_fostinfo_price"
                android:layout_toRightOf="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/et_fostinfo_name"/>

            <TextView
            android:id="@+id/text3"
            android:layout_alignTop="@+id/et_fostinfo_day"
            android:layout_below="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="寄养价格：￥"
            android:textSize="30sp"
            />

            <EditText
                android:id="@+id/et_fostinfo_day"
                android:layout_toRightOf="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/et_fostinfo_price"/>

            <TextView
                android:id="@+id/text4"
                android:layout_alignTop="@+id/et_fostinfo_require"
                android:layout_below="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="要求："
                android:textSize="30sp"
                />

            <EditText
                android:id="@+id/et_fostinfo_require"
                android:layout_toRightOf="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/et_fostinfo_day"/>

            <Button
                android:id="@+id/bt_fostinfo_takephoto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:text="@string/takephoto"
                android:layout_below="@+id/et_fostinfo_require" />

            <Button
                android:id="@+id/bt_fostinfo_chooseFromAlbum"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:text="@string/chooseFromAlbum"
                android:layout_below="@+id/bt_fostinfo_takephoto" />

            <ImageView
                android:id="@+id/im_fostinfo_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/bt_fostinfo_chooseFromAlbum"/>

            <Button
                android:id="@+id/bt_fostinfo_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textSize="30sp"
                android:layout_below="@+id/im_fostinfo_picture"
                android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </ScrollView>

</LinearLayout>