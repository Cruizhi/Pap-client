<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/bg_pink" >

    <RelativeLayout
        android:id="@+id/register_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar">

        <Button
            android:id="@+id/register_reback_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:onClick="register_back"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_top_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
    <EditText
        android:id="@+id/register_user_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_editbox"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="请在此输入你的昵称"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/register_id_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_user_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_editbox"
        android:hint="请在此输入账号"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

            <EditText
                android:id="@+id/register_password_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_id_edit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_editbox"
                android:hint="请再次输入你的密码"
                android:singleLine="true"
                android:password="true"
                android:textColor="#000"
                android:textSize="15sp" />

    <EditText
        android:id="@+id/register_password_edit_makesure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_editbox"
        android:hint="请再次输入你的密码"
        android:singleLine="true"
        android:password="true"
        android:textColor="#000"
        android:textSize="15sp" />

            <EditText
                android:id="@+id/register_address_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_password_edit_makesure"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_editbox"
                android:hint="请输入您的地址"
                android:textColor="#000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/register_phone_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_address_edit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_editbox"
                android:hint="请输入您的电话"
                android:textColor="#000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/register_email_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_phone_edit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_editbox"
                android:hint="请输入您的邮箱"
                android:textColor="#000"
                android:textSize="15sp" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_style_red"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_below="@+id/register_email_edit"
            android:layout_marginTop="20dp"/>
            </RelativeLayout>
    </ScrollView>

</RelativeLayout>