<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/guide_account_nm" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black" />

        </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        </LinearLayout>

    <Button
        android:id="@+id/bt_user_set"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="设置"
        android:textSize="35sp"
        android:drawableLeft="@drawable/set"
        android:textColor="@color/black"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:drawablePadding="15dp"
        android:background="@color/white"/>

    <Button
        android:id="@+id/bt_user_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:drawablePadding="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:drawableLeft="@drawable/good"
        android:background="@color/white"
        android:textSize="35sp"
        android:text="商品上架" />

    <Button
        android:id="@+id/bt_user_fosterage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:text="宠物寄养"
        android:textColor="@color/black"
        android:background="@color/white"
        android:drawableLeft="@drawable/fosterage"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/bt_user_fosterageindent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:text="寄养订单"
        android:textColor="@color/black"
        android:background="@color/white"
        android:drawableLeft="@drawable/fosterage"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/bt_user_finishindent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:text="已完成订单"
        android:textColor="@color/black"
        android:background="@color/white"
        android:drawableLeft="@drawable/fosterage"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"/>

</LinearLayout>